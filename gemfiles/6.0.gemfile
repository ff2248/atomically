source 'https://rubygems.org'

gem 'activerecord', '~> 6.0.0'

group :test do

  gem 'mysql2', '0.5.1' if ['mysql', 'makara_mysql'].include?(ENV['DB'])
  gem 'pg', '~> 0.18' if ['pg', 'makara_pg'].include?(ENV['DB'])
  gem 'makara', '~> 0.4.1' if ['makara_mysql', 'makara_pg'].include?(ENV['DB'])
  gem 'simplecov'
  gem 'pluck_all', '>= 2.0.4'
  gem 'timecop', '~> 0.9.1'
  gem 'update_all_scope', '~> 0.1.0'
end

gemspec path: '../'
