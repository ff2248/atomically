source 'https://rubygems.org'

gem 'activerecord', '~> 5.2.0'

group :test do
  gem 'mysql2', '0.5.1' if ENV['DB'].in?(['mysql', 'makara_mysql'])
  gem 'pg', '~> 0.18' if ENV['DB'].in?(['pg', 'makara_pg'])
  gem 'makara', '~> 0.4.1' if ENV['DB'].in?(['makara_mysql', 'makara_pg'])
  gem 'simplecov'
  gem 'i18n', '< 1.6'
  gem 'pluck_all', '>= 2.0.3'
  gem 'timecop', '~> 0.9.1'
  gem 'update_all_scope', '~> 0.1.0'
end

gemspec path: '../'
